{% extends "base.twig" %}
{% block title %}Topics{% endblock %}
{% block content %}
    <div class="row starter-template">
        <h2>LDA Topics</h2>
    </div>
    <div class="row">
        {# <div class="col-md-6"> #}
            <table class="table table-striped table-hover table-condensed table-bordered">
                <tr>
                    <th>Topic</th>
                    {% for i in 1..10 %}
                        <th>Word {{ i }}</th>
                    {% endfor %}
                </tr>
                {% for topic in topics %}
                <tr>
                    <td>{{ topic.id }}.</td>
                    {% for word in topic.words %}
                        <td>{{ word }}</td>
                    {% endfor %}
                </tr>
                {% endfor %}
            </table>
        {# </div> #}
    </div>
      
  {% endblock %}
