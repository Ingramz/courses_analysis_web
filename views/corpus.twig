{% extends "base.twig" %}
{% block title %}Corpus{% endblock %}
{% block content %}
      <div class="starter-template">
        {# <h1>Coprus: TOP 100</h1> #}
<div id="pieChart"></div>
<script>
var pie = new d3pie("pieChart", {
	"header": {
		"title": {
			"text": "Corpus Top {{rows}}",
			"fontSize": 24,
			"font": "open sans"
		},
		"subtitle": {
			"text": "Data description",
			"color": "#999999",
			"fontSize": 12,
			"font": "open sans"
		},
		"titleSubtitlePadding": 9
	},
	"footer": {
		"color": "#999999",
		"fontSize": 10,
		"font": "open sans",
		"location": "bottom-left"
	},
	"size": {
		"canvasWidth": 590,
		"pieOuterRadius": "90%"
	},
	"data": {
		"sortOrder": "value-desc",
		"content": {{ data|raw }}
	},
	"labels": {
		"outer": {
			"pieDistance": 32
		},
		"inner": {
			"hideWhenLessThanPercentage": 3
		},
		"mainLabel": {
			"fontSize": 11
		},
		"percentage": {
			"color": "#ffffff",
			"decimalPlaces": 1
		},
		"value": {
			"color": "#adadad",
			"fontSize": 11
		},
		"lines": {
			"enabled": true
		},
		"truncation": {
			"enabled": true
		}
	},
	"effects": {
		"pullOutSegmentOnClick": {
			"effect": "linear",
			"speed": 400,
			"size": 8
		}
	},
	"misc": {
		"gradient": {
			"enabled": true,
			"percentage": 100
		}
	}
});
</script>        
      </div>
      
  {% endblock %}
